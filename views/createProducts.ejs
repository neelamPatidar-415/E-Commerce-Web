<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Create New Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<% if(success.length>0) { %>
  <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
    <span class="inline-block mt-1 mb-1 text-white">
      <%=success%>
    </span>
  </div>
  <% } %>

  <div class="flex">
    <!-- Sidebar -->
    <div class="w-1/5 bg-white p-6 shadow h-screen">
      <h1 class="text-xl font-bold mb-6 ">Scatch</h1>
      <ul class="space-y-4">
        <li><a href="#" class="text-blue-600 hover:underline">All Products</a></li>
        <li><a href="#" class="text-blue-600 hover:underline">Create new product</a></li>
      </ul>
    </div>

    <!-- Main Form -->
    <div class="flex-1 p-10">
      <h2 class="text-2xl font-semibold mb-6 px-0 py-0">Create New Product</h2>

      <form class="bg-white p-6 rounded shadow max-w-3xl" enctype="multipart/form-data" autocomplte="off" method="post" action="/products/create" >
        <!-- Product Details -->
        <h3 class="text-xl font-bold mb-4">Product Details</h3>

        <div class="mb-4">
          <label class="block mb-2 font-medium">Product Image</label>
          <input type="file" class="block w-full border rounded p-2" name="image" />
        </div>

        <div class="grid grid-cols-2 gap-4 mb-4">
          <input type="text" placeholder="Product Name" class="border p-2 rounded w-full" name="name"/>
          <input type="text" placeholder="Product Price" class="border p-2 rounded w-full" name="price"/>
        </div>

        <div class="mb-4">
          <input type="text" placeholder="Discount Price" class="border p-2 rounded w-6/12" name="discount"/>
        </div>

        <!-- Panel Details -->
        <h3 class="text-xl font-bold mb-4 mt-6">Panel Details</h3>

        <div class="grid grid-cols-2 gap-4 mb-4">
          <input type="text" placeholder="Background Color" class="border p-2 rounded w-full" name="bgcolor"/>
          <input type="text" placeholder="Panel Color" class="border p-2 rounded w-full" name="panelcolor"/>
        </div>

        <div class="mb-6">
          <input type="text" placeholder="Text Color" class="border p-2 rounded w-6/12" name="textcolor"/>
        </div>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" >
          Create New Product
        </button>
      </form>
    </div>
  </div>

</body>
</html>
